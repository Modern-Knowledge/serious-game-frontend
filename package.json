{
  "name": "serious-game-frontend",
  "version": "1.3.0",
  "author": "Daniel Kaufmann, Florian Mold",
  "homepage": "https://modern-knowledge.at/",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start-production": "ng serve --prod",
    "build": "npm run pre-build && ionic build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
