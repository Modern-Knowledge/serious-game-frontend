    "@angular/router": "^8.2.14",
    "@auth0/angular-jwt": "^3.0.1",
    "@capacitor/android": "^1.4.0",
    "@capacitor/cli": "1.4.0",
    "@capacitor/core": "1.4.0",
    "@ionic-native/core": "^5.19.1",
    "@ionic-native/splash-screen": "^5.19.1",
    "@ionic-native/status-bar": "^5.19.1",
    "@ionic/angular": "^4.11.7",
    "@ionic/storage": "^2.2.0",
